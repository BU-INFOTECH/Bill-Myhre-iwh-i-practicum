// views/updates.pug
doctype html
html
  head
    title= title
  body
    h1 Update Custom Object Form | Integrating With HubSpot I Practicum
    form(action="/update-cobj" method="POST")
      label(for="name") Name:
      input(type="text" name="name" required)
      br
      label(for="property1") Property 1:
      input(type="text" name="property1" required)
      br
      label(for="property2") Property 2:
      input(type="text" name="property2" required)
      br
      button(type="submit") Submit
    a(href="/") Return to the homepage
